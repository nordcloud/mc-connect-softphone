{
  "name": "mc-connect-softphone",
  "version": "0.0.1",
  "scripts": {
    "start": "npm-watch api",
    "deploy:dev": "STAGE=dev npx cdk deploy --require-approval never",
    "test-all": "npm run typecheck && npm run lint && npm test && npm run synth:prod",
    "typecheck": "tsc",
    "lint": "eslint ./",
    "test": "jest --passWithNoTests",
    "synth:prod": "STAGE=prod npx cdk synth --quiet",
    "synth:dev": "STAGE=dev npx cdk synth --quiet",
    "api": "rm -rf ./cdk.out && npm run synth:dev && sam local start-api -t ./cdk.out/mc-connect-softphone-dev.template.json -n ./sam.env.json -s ../src/assets --host localhost",
    "prepare": "husky install"
  },
  "watch": {
    "api": {
      "patterns": [
        "src",
        "sam.env.json"
      ],
      "extensions": "ts, ejs"
    }
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.69.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.69.0-alpha.0",
    "@aws-sdk/client-dynamodb": "^3.294.0",
    "@aws-sdk/lib-dynamodb": "^3.294.0",
    "aws-cdk-lib": "2.69.0",
    "constructs": "^10.1.279",
    "cookie": "^0.5.0",
    "deepmerge": "^4.3.0",
    "ejs": "^3.1.9",
    "http-status-codes": "^2.2.0",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.113",
    "@types/cookie": "^0.5.1",
    "@types/ejs": "^3.1.2",
    "@types/jest": "^29.4.4",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.17.11",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-ejs-js": "^0.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
